

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    font-size: 14px; 
  }
  
  @media (min-width: 768px) {
    html {
      font-size: 15px;
    }
  }
  
  @media (min-width: 1024px) {
    html {
      font-size: 16px;
    }
  }
  
  body {
    @apply text-sm leading-relaxed;
  }

  h1 {
    @apply text-xl font-bold;
  }
  
  h2 {
    @apply text-lg font-semibold;
  }
  
  h3 {
    @apply text-base font-semibold;
  }

  input, 
  textarea, 
  select {
    @apply text-sm py-1.5 px-3;
  }

  button {
    @apply text-sm py-1.5 px-3;
  }
}

@layer utilities {
  .text-compact {
    font-size: 0.875rem;
    line-height: 1.4;
  }
  
  .compact-spacing {
    @apply space-y-3;
  }
  
  .compact-padding {
    @apply p-3;
  }
}

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-gray-100;
}

::-webkit-scrollbar-thumb {
  @apply bg-gray-400 rounded-full;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-gray-500;
}